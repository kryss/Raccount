<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", contacts_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_contact_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", contact_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.contact.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @contact.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.contact.email", :default => t("activerecord.labels.email", :default => "Email")) %>:</b>
          <%= @contact.email %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.contact.user_id", :default => t("activerecord.labels.user_id", :default => "User")) %>:</b>
          <%= @contact.user_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.contact.contact_type", :default => t("activerecord.labels.contact_type", :default => "Contact type")) %>:</b>
          <%= @contact.contact_type %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.contact.note", :default => t("activerecord.labels.note", :default => "Note")) %>:</b>
          <%= @contact.note %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_contact_path(@contact), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), contact_path(@contact), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>